<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mihaelisaev.metw_example.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
        <RelativeLayout
            android:id="@+id/phoneView1"
            android:layout_width="200dp"
            android:layout_height="39dp"
            android:layout_marginTop="40dp"
            android:background="#EBEBEB"
            android:layout_gravity="center_horizontal">
            <TextView
                android:id="@+id/phoneTitle1"
                android:text="SIMPLE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12.37dp"
                android:textColor="#000"
                android:textSize="11.3dp"
                android:fontFamily="ProximaNova-Semibold" />

            <EditText
                android:id="@+id/phoneTextField1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/phoneTitle1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8.69dp"
                android:hint="1 201-555-5555"
                android:textColorHint="#949494"
                android:textColor="#000"
                android:fontFamily="ProximaNova-Light"
                android:textSize="11.3dp"
                android:inputType="phone"
                android:digits="+0123456789"
                android:ems="10"
                android:background="@null">
                <requestFocus/>
            </EditText>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/phoneView2"
            android:layout_width="200dp"
            android:layout_height="39dp"
            android:layout_marginTop="40dp"
            android:background="#EBEBEB"
            android:layout_gravity="center_horizontal">
            <TextView
                android:id="@+id/phoneTitle2"
                android:text="GLIB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12.37dp"
                android:textColor="#000"
                android:textSize="11.3dp"
                android:fontFamily="ProximaNova-Semibold" />

            <EditText
                android:id="@+id/phoneTextField2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/phoneTitle2"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8.69dp"
                android:hint="1 201-555-5555"
                android:textColorHint="#949494"
                android:textColor="#000"
                android:fontFamily="ProximaNova-Light"
                android:textSize="11.3dp"
                android:inputType="phone"
                android:digits="+0123456789"
                android:ems="10"
                android:background="@null" />
        </RelativeLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
